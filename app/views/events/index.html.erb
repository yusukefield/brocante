<p id="notice"><%= notice %></p>

<div class="container">
  <div class="form">

    <dev class="row">

     <div class="col-md-3">
      <%= render partial: '/home/mybox' %>
     </div>

      <div class="col-md-9 float-right">

          <table class="table table-striped">
            <thead>
              <tr>
                <th><h5>\All Event/</h5></th>
                <th colspan="4"></th>
              </tr>
            </thead>

            <tbody>
              <% @events.each do |event| %>
                <tr>
                  <td><%= link_to event do %>
                    <%= attachment_image_tag event, :picture, format: 'jpeg', class: "", fallback: "no_image.jpg", :size =>'100x80' %></td>
                  <% end %>
                  <td><p><%= event.date %></p></td>
                  <td><p><%= event.title.truncate(10) %></p></td>
                  <td><p><%= event.prefecture_name %></p></td>
                  <td><p><%= event.address %></p></td>
                </tr>
              <% end %>
            </tbody>
          </table>

      </div>
    </dev>

  </div>
</div>
