<div class="container">

<div class="form">

<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">

    <h1 class="text-center"><%= t('.sign_up') %></h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <div class="far fa-user"><%= f.label :お名前 %></div><br />
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="far fa-smile"><%= f.label :ニックネーム %></div><br />
        <%= f.text_field :webname, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="far fa-envelope"><%= f.label :email %></div><br />
        <%= f.email_field :email, autofocus: false, class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="fas fa-key"><%= f.label :password %></div>
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="fas fa-key"><%= f.label :password_confirmation %></div><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit t('.sign_up'), class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

</div>
</div>

