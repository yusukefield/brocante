<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

   <%= attachment_image_tag @event, :picture, format: 'jpeg', class: "", fallback: "no_image.jpg", :size =>'150x100' %><br>

  <div class="field">
    <%= form.attachment_field :picture %>
  </div>


  <div class="form-group">
    <%= form.collection_select :prefecture_name, JpPrefecture::Prefecture.all,:name, :name, {:prompt => true}, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
