<div class="form">

<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">

    <h1 class="text-center"><%= t('.sign_up') %></h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <div class="fas fa-users"><%= f.label "会社名/団体名" %></div><br />
        <%= f.text_field :group_name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="far fa-user"><%= f.label "代表者名" %></div><br />
        <%= f.text_field :rep_name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="far fa-building"><%= f.label "住所" %></div><br />
        <%= f.text_field :address, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="fas fa-phone"><%= f.label "電話番号" %></div><br />
        <%= f.text_field :phonenum, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="far fa-envelope"><%= f.label :email %></div><br />
        <%= f.email_field :email, autofocus: false, class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="fas fa-key"><%= f.label :password %></div>
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="fas fa-key"><%= f.label :password_confirmation %></div><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "sign up", class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>

<%= render "hosts/shared/links" %>

</div>
  </div>
</div>
