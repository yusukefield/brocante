<div class="container">
  <div class="form">

    <div class="row">
      <div class="col-lg-4 col-md-6 ml-auto mr-auto mb-5">

        <%= form_for(@host) do |f| %>

            <div class="form-group has-icon">
                <%= f.label :group_name, '会社名/団体名' %>
                <%= f.text_field :group_name, class: 'form-control',placeholder:"会社名/団体名" %>
            </div>

            <div class="form-group has-icon">
                <%= f.label :rep_name, '代表者名' %>
                <%= f.text_field :rep_name, class: 'form-control',placeholder:"代表者名" %>
            </div>

            <div class="form-group has-icon">
                <%= f.label :address, '住所' %>
                <%= f.text_field :address, class: 'form-control',placeholder:"住所" %>
            </div>

            <div class="form-group has-icon">
                <%= f.label :email, 'メールアドレス' %>
                <%= f.text_field :email, class: 'form-control',placeholder:"メールアドレス" %>
            </div>

            <div class="form-group has-icon">
                <%= f.label :url, 'ホームページURL' %>
                <%= f.text_field :url, class: 'form-control',placeholder:"ホームページURL" %>
            </div>

            <%= f.submit "変更を保存", class: 'btn btn-primary btn-sm mr-auto ml-auto' %>
        <% end %>

    </div>
   </div>

  </div>
</div>