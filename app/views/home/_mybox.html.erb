<div class="sticky-top">

        <% if !host_signed_in? %>
          <div class="card" style="width: 15rem;">

            <div class="card-header">
              <% if user_signed_in? then %>
                <h5>ようこそ<br><%= current_user.webname %> さん</h5>
              <% else %>
                <h5>ようこそ　ゲスト様</h5>
              <% end %>
            </div>

            <div class="card-body">
              <p class="card-text">
               <% if user_signed_in? then %>
                 <span><%= link_to 'My page', user_path(current_user.id), class: "btn btn-secondary btn-sm mb-2" %></span><br>
                 <span><%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "btn btn-secondary btn-sm mb-2" %></span><br>
                 <span><%= link_to "Profile", edit_user_path(current_user.id), class: "btn btn-secondary btn-sm mb-2" %></span><br>
                 <span><%= link_to 'New Article', new_article_path(current_user.id), class: "btn btn-secondary btn-sm mb-2" %></span>
               <% else %>
                 <%= link_to 'Log in', new_user_session_path, method: :get, class: "btn btn-secondary btn-sm mb-2" %><br>
                 <%= link_to 'New menber', new_user_registration_path, method: :get, class: "btn btn-secondary btn-sm mb-2" %>
               <% end %>
             </p>
            </div>

          </div>
        <% end %>
</div>