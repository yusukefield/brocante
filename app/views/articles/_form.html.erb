<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.country_select :country, format: :with_alpha2, selected: "JP" %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category, Article.categories.keys.map {|k| [I18n.t("enums.article.category.#{k}"), k]} %>
  </div>

  <div class="form-group"> 
    <%= form.label :tag_list %>
    <%= form.text_field :tag_list, value: @article.tag_list.join(','), class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
